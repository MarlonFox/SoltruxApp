<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:background="@color/fondo"
    android:gravity="center_vertical|center_horizontal"
    >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:gravity="right"
    >
       <EditText
        android:id="@+id/txtComentario"
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:gravity="top|left"
        android:hint="@string/str_ingresar_pregunta"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxWidth="300sp"
        android:minWidth="10.0dip"
        android:scrollHorizontally="false" />
        
    </LinearLayout>    
    
 
     
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
     android:gravity="center"
    >
    
       <LinearLayout 
                                android:layout_width="fill_parent"
                                android:layout_height="35dp"
                                android:gravity="center_vertical" 
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                    <LinearLayout 
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content" 
                                    android:gravity="center"
                                    android:layout_marginRight="2dp" 
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                         <Button
                                        android:id="@+id/btnAceptar"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"                                         
                                        android:text="@string/btn_agregar"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:background="@drawable/boton1"
                                        android:textColor="@color/boton_texto"
                                        android:onClick="btnItinerarios"/>	
                                     
                                    </LinearLayout>

                                    <LinearLayout 
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content" 
                                    android:gravity="center"
                                    android:layout_marginLeft="2dp" 
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                        <Button
                                        android:id="@+id/btnCancelar"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"                                         
                                        android:text="@string/btn_cancelar"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:background="@drawable/boton2"
                                        android:textColor="@color/boton_texto"
                                        android:onClick="btnMiQuickTric"/>	
                                      
                                    </LinearLayout>
                            </LinearLayout>
   
    </LinearLayout>
    
</LinearLayout>
